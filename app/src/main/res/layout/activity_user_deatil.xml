<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ruler.noteapplication.UserDeatilActivity">

    <TextView
        android:id="@+id/txt_phone_number"
        android:text="mobilePhoneNumber:"
        android:layout_width="wrap_content"
        android:layout_height="40dp" />
    <TextView
        android:layout_below="@+id/txt_phone_number"
        android:text="mobilephone"
        android:id="@+id/mobilePhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="40dp" />

    <TextView
        android:layout_below="@+id/mobilePhoneNumber"
        android:id="@+id/txt_nick_name"
        android:text="nick_name:"
        android:layout_width="wrap_content"
        android:layout_height="40dp" />
    <TextView
        android:layout_below="@+id/txt_nick_name"
        android:id="@+id/nick_Name"
        android:text="nickName"
        android:layout_width="wrap_content"
        android:layout_height="40dp" />

</RelativeLayout>
