<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"

    android:layout_marginTop="80dp">
    <RelativeLayout
        android:id="@+id/dialog_input"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <TextView
            android:id="@+id/text_add_note_name"
            android:text="input note name"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_below="@+id/text_add_note_name"
            android:drawableBottom="@drawable/input_underline"
            android:textCursorDrawable="@null"
            android:background="@null"
            android:id="@+id/input_author_name"
            android:layout_marginLeft="10dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@+id/input_author_name"
            android:id="@+id/text_add_note_title"
            android:text="input your note title"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_below="@+id/text_add_note_title"
            android:id="@+id/input_title"
            android:drawableBottom="@drawable/input_underline"
            android:layout_marginLeft="10dp"
            android:layout_width="300dp"
            android:textCursorDrawable="@null"
            android:background="@null"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/dialog_input"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/btn_left"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cancel"/>
        <Button
            android:id="@+id/btn_right"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"/>
    </RelativeLayout>

</RelativeLayout>
